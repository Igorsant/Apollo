{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES6",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "tests/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "migrations/**/*"]
}
